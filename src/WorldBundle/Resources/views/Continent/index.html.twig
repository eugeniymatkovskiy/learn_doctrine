{% extends 'base.html.twig' %}

{% block body %}
    <h1>Continents list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for continent in continents %}
            <tr>
                <td><a href="{{ path('continent_show', { 'id': continent.id }) }}">{{ continent.id }}</a></td>
                <td>{{ continent.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('continent_show', { 'id': continent.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('continent_edit', { 'id': continent.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('continent_new') }}">Create a new continent</a>
        </li>
    </ul>
{% endblock %}
